{
  "manifest_version": 3,
  "name": "CleanUpGoogle",
  "version": "1.0",
  "description": "Cleans up the Google Page by removing unnessecary elements & AI Overview",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*", "*://*.google.ca/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
